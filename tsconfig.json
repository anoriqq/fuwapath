{
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types",
      "src/@types",
    ],
    "sourceMap": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals" : true,
    "strictNullChecks": true,
    "lib": ["dom", "es2017"],
    "jsx": "react",
  },
  "include": ["src/**/*"],
}
